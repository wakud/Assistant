@model IEnumerable<Assistant_TEP.Models.ReportParam>

@{
    ViewData["Title"] = "Список параметрів";
}

    <h1>Список параметрів звіту</h1>

<p>
    <a asp-action="Create">Добавити параметер</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Назва параметру
            </th>
            <th>Опис параметру
            </th>
            @*<th>Звіт
            </th>*@
            <th>Тип параметру
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Report.Id)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.ParamType.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Змінити</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Детально</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>
