@model Assistant_TEP.ViewModels.ReportWithFile

@{
    ViewData["Title"] = "Добавлення звіту";
}

<h1>Добавлення звіту</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Назва звіту</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Опис звіту</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FileScript" class="control-label">Файл скрипту</label>
                <input asp-for="FileScript" class="form-control" />
                <span asp-validation-for="FileScript" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DbTypeId" class="control-label">Тип бази</label>
                <select asp-for="DbTypeId" class="form-control" asp-items="ViewBag.DbTypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TypeReportId" class="control-label">Період звітності</label>
                <select asp-for="TypeReportId" class="form-control" asp-items="ViewBag.TypeReportId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавити" class="btn btn-primary" />
            </div>
            @if (ViewBag.error != null)
            {
                @if (ViewBag.error == "BadFile")
                {
                    <script>
                    setTimeout(() => alert("Не вибрано файл скрипта!"), 500);
                    </script>
                }
            }

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернутися до списку звітів</a>
</div>

