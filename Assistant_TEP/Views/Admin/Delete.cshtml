@model Assistant_TEP.Models.Report

@{
    ViewData["Title"] = "Видалення звіту";
}

    <h1>Видалити звіт "@Html.DisplayFor(model => model.Name)" ?</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Назва звіту
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Опис звіту
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Файл скріпт
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FileScript)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Index">До списку звітів</a>
    </form>
</div>
