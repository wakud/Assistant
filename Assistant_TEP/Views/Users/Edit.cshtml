@model Assistant_TEP.Models.User

@{
    ViewData["Title"] = "Змінити";
}

<h4>Змінити дані користувача @Html.DisplayFor(model => model.FullName)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FullName" class="control-label">ПІП</label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Login" class="control-label">Логін</label>
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Пароль</label>
                @*<input asp-for="Password" class="form-control" />*@
                <input asp-for="Password" class="form-control" asp-format="@ViewData["Pass"]" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CokId" class="control-label">Код ЦОК</label>
                <select asp-for="CokId" class="form-control" asp-items="ViewBag.CokId"></select>
                <span asp-validation-for="CokId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Може виконати на будь-якому районі</label>
                @Html.CheckBoxFor(m => m.AnyCok)
            </div>
            <div class="form-group">
                <label asp-for="IsAdmin" class="control-label">Права адміна(1-так, 0-ні)</label>
                <input asp-for="IsAdmin" class="form-control" />
                <span asp-validation-for="IsAdmin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернутися до списку користувачів</a>
</div>

