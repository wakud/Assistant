@model Assistant_TEP.Models.Organization

@{
    ViewData["Title"] = "Edit";
}

    <h4>Змінити @Html.DisplayFor(modelItem => Model.Name)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Назва ЦОКу</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Code" class="control-label">код ЦОКу</label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nach" class="control-label">ПІП начальника ЦОКу</label>
                <input asp-for="Nach" class="form-control" />
                <span asp-validation-for="Nach" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label">адреса ЦОКу</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Buh" class="control-label">ПІП бухгалтера ЦОКу</label>
                <input asp-for="Buh" class="form-control" />
                <span asp-validation-for="Buh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tel" class="control-label">телефон</label>
                <input asp-for="Tel" class="form-control" />
                <span asp-validation-for="Tel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">До списку ЦОКів</a>
</div>

