@model IEnumerable<Assistant_TEP.Models.Organization>

@{
    ViewData["Title"] = "Index";
}

<h1>Список ЦОКів</h1>

<p>
    <a asp-action="Create">Добавити ЦОК</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Назва Цоку
            </th>
            <th>
                Код цоку
            </th>
            <th>
                ПІП начальника
            </th>
            <th>
                Адреса ЦОКу
            </th>
            <th>
                ПІП бухгалтера
            </th>
            <th>
                телефон
            </th>
            <th>
                ID регіону
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Buh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegionId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Змінити</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Детально</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>
