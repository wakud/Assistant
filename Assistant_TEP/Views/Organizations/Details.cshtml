@model Assistant_TEP.Models.Organization

@{
    ViewData["Title"] = "Details";
}

<h3>Детально про @Html.DisplayFor(model => model.Name)</h3>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Назва ЦОК
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Код ЦОК
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class = "col-sm-2">
            ПІП начальника
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nach)
        </dd>
        <dt class = "col-sm-2">
            Адреса ЦОКу
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">
            ПІП бухгалтера
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Buh)
        </dd>
        <dt class = "col-sm-2">
            телефон
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tel)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Змінити</a> |
    <a asp-action="Index">До списку ЦОКів</a>
</div>
